{{ rm.include_menus(curpage="Drum"+drumnum|string+"Edit", mainmenu_mini="drum", submenu="drum1", drumpage1="Drum"+drumnum|string+"Edit", drumsubpage="Drum"+drumnum|string, drumedit="Edit") -}}
