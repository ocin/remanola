// FilterEnv
Map	PageName		"FilterEnv"			FilterEnv
{{ rm.include_menus(curpage="FilterEnv", mainmenu_mini="filter", submenu="filter", oscpage="FilterEnv") -}}
Map	Fader 3		Filter Env Attack			FilterEnv	// template="FFreq"
Map	Fader 4		Filter Env Decay			FilterEnv	// template="FFreq"
Map	Fader 5		Filter Env Release			FilterEnv	// template="FFreq"
// LFO
Map	PageName		"LFO"			LFO
{{ rm.include_menus(curpage="LFO") -}}
Map	Sel1_0		TempoSync=Free			LFO
Map	Sel1_1		TempoSync=Sync			LFO
Map	UDVButton 1-2_2-2		LFO Waveform			LFO	// template="UDLFO"
Map	Fader 4		LFO Freq 			LFO	Free	// template="FFreq"
Map	UDVButton 7-4_8-4		LFO Freq	8		LFO	Sync	// template="UDFreq"
Map	Button 1-5		LFOSync		SEL1	LFO	// template="BGreenOnOff"
{% endblock main %}
