{% extends "devices/utility/utility-nopatch.remotemap" %}
{% set deviceman="Propellerheads" -%}
{% set devicescope="RPG-8 Monophonic Arpeggiator" -%}
{% set devicename="RPG-8" -%}
{% set shortname="rpg8" -%}
{% block groups %}
Define Group	Page	Main	Pattern	Index	Internal
Define Group	TempoSync	Free	Sync
{% endblock groups %}
{% block main %}
// Index
Map	PageName		"Index" 				Index
Map	Button 1-1		Page=Main			Index
Map	Button 1-5		Page=Pattern			Index
Map	Button C7		Page=Internal			Index
// Main
Map	PageName		"Main" 				Main
{{ rm.include_menus(curpage="Main", mainmenu_mini="common") -}}
Map	Sel1_0		TempoSync=Free			Main
Map	Sel1_1		TempoSync=Sync			Main
Map	Fader 2		Velocity/Manual			Main
Map	Button 1-3		Hold			Main
Map	UDVButton 3-3_4-3		Octave Shift			Main
Map	Button 1-4		Arpeggiator Enable			Main
Map	UDVButton 3-4_4-4		Mode			Main
Map	UDVButton 5-4_6-4		Octave			Main
Map	UDVButton 7-4_8-4		Insert			Main
Map	Button 8-5		Sync		SEL1	Main
Map	UDVButton 7-6_8-6		Rate	5		Main	Sync
Map	Fader 6		Rate			Main	Free
Map	Button 8-7		Single Note Repeat			Main
Map	Fader 8		Gate Length			Main
// Pattern
Map	PageName		"Pattern" 				Pattern
{{ rm.include_menus(curpage="Pattern", mainmenu_mini="common") -}}
Map	Button 1-1		Pattern Step 1			Pattern
Map	Button 1-2		Pattern Step 2			Pattern
Map	Button 1-3		Pattern Step 3			Pattern
Map	Button 1-4		Pattern Step 4			Pattern
Map	Button 1-5		Pattern Step 5			Pattern
Map	Button 1-6		Pattern Step 6			Pattern
Map	Button 1-7		Pattern Step 7			Pattern
Map	Button 1-8		Pattern Step 8			Pattern
Map	Button 2-1		Pattern Step 9			Pattern
Map	Button 2-2		Pattern Step 10			Pattern
Map	Button 2-3		Pattern Step 11			Pattern
Map	Button 2-4		Pattern Step 12			Pattern
Map	Button 2-5		Pattern Step 13			Pattern
Map	Button 2-6		Pattern Step 14			Pattern
Map	Button 2-7		Pattern Step 15			Pattern
Map	Button 2-8		Pattern Step 16			Pattern
Map	Button 3-1		Pattern Enable			Pattern
Map	UDVButton 3-8_4-8		Pattern Step Count			Pattern
Map	Button 8-1		Shuffle			Pattern
{% endblock main %}
