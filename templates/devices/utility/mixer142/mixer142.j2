{% if channum <= 7 %}
{{ rm.include_menus(curpage="Chan"+channum|string, submenu="channel1-7", chanpage1="Chan"+channum|string) -}}
{% else %}
{{ rm.include_menus(curpage="Chan"+channum|string, submenu="channel8-14", chanpage2="Chan"+channum|string) -}}
{% endif %}
Map	SubPageName		"ChannelMain" 				Chan{{ channum }}	ChannelMain
Map	Button 1-2		Channel {{ channum }} Mute			Chan{{ channum }}	ChannelMain
Map	Button 2-2		Channel {{ channum }} Solo			Chan{{ channum }}	ChannelMain
Map	Knob V6		Channel {{ channum }} Pan			Chan{{ channum }}	ChannelMain
Map	Fader 7		Channel {{ channum }} Level			Chan{{ channum }}	ChannelMain
Map	Meter 8		Channel {{ channum }} Peak Meter			Chan{{ channum }}	ChannelMain
Map	SubPageName		"ChannelEq" 				Chan{{ channum }}	ChannelEq
Map	Button 1-2		Channel {{ channum }} EQ On/Off			Chan{{ channum }}	ChannelEq
Map	Knob V4		Channel {{ channum }} Bass Amount			Chan{{ channum }}	ChannelEq
Map	Knob V5		Channel {{ channum }} Treble Amount			Chan{{ channum }}	ChannelEq
Map	SubPageName		"ChannelAuxSend" 				Chan{{ channum }}	ChannelAuxSend
